    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "pokenode-ts": "^1.20.0",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^5.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
