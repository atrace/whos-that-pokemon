{
  "name": "whos-that-pokemon-api",
  "version": "1.0.0",
  "main": "build/src/server.js",
  "license": "MIT",
  "scripts": {
    "generate-routes": "tsoa routes",
    "generate-spec": "tsoa spec",
    "build": "tsoa spec-and-routes && tsc --outDir build --experimentalDecorators",
